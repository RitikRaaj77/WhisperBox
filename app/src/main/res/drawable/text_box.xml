<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#d8efff" /> <!-- Light gray background color -->

    <!-- Corner Radius -->
    <corners android:radius="16dp" /> <!-- Rounded corners -->

    <!-- Stroke (Border) -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Border color and width -->

    <!-- Padding (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
